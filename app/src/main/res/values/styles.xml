<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay">AppBarOverlay</style>

    <style name="AppTheme.PopupOverlay">PopupOverlay</style>

    <style name="round_image_view">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
        <item name="color">@color/light_pink</item>
    </style>

    <style name="round_profile">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="color">@color/light_pink</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/purple_baseline</item>
        <item name="itemIconTint">@color/light_blue</item>
        <item name="itemTextColor">@color/light_blue</item>

    </style>
</resources>