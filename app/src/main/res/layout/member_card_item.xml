<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="531dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:background="@color/white"
    android:elevation="15dp">

    <RelativeLayout
        android:id="@+id/rv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/memberNameTV"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:padding="2dp"
            android:layout_margin="5dp"
            android:text="team mate name"
            android:textColor="@color/purple_baseline"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/taskCompletionTV"
            android:layout_toEndOf="@+id/memberNameTV"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:padding="2dp"
            android:layout_margin="5dp"
            app:cornerRadius="20dp"
            android:textColor="@color/purple_baseline"
            android:textSize="25dp"
            android:text="4/5"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rv1">

        <Button
            android:id="@+id/todoBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Todo"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/purple_baseline"/>
        <Button
            android:id="@+id/doneBtn"
            android:layout_toEndOf="@+id/todoBtn"
            android:layout_width="200dp"
            app:cornerRadius="20dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_baseline"
            android:text="Done"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGroups"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_margin="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        tools:listitem="@layout/individual_task_item">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/addTaskBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add task"
        android:backgroundTint="@color/purple_baseline"
        app:layout_constraintTop_toBottomOf="@+id/rvGroups"/>


</androidx.constraintlayout.widget.ConstraintLayout>